button
	cursor				pointer
	transition			all 0.3s linear
	&.fav	
		min-width			3em
		max-width			3em
		min-height			3em
		max-height			3em
		min-height			3em
		padding				0 0 0.1em
		box-shadow			0em 0.1em 0.1em rgba(0, 0, 0, 0.3) , inset 0em -0.1em 0 rgba(0, 0, 0, 0.3)
		border-radius		50%
		border-width		0
		&:hover
			box-shadow			0em 0.1em 0.1em rgba(0, 0, 0, 0.6) , inset 0em -0.1em 0.1em rgba(0, 0, 0, 0.6)
		&:active
			box-shadow			0em 0.1em 0.1em rgba(0, 0, 0, 0.6) , inset 0em -0.1em 0.1em rgba(0, 0, 0, 0.9)
	&.flat
		min-width			3em
		max-width			3em
		min-height			3em
		max-height			3em
		min-height			3em
		margin				auto 1em 1em auto
		padding				0
		border-radius		50%
		border-width		0
		&:hover
			box-shadow			inset 0 -0.1em 0.1em rgba(0, 0, 0, 0.6)
		&:active
			box-shadow			inset 0 -0.1em 0.1em rgba(0, 0, 0, 0.9)
	&.left
		position			absolute
		bottom				1em
		left				2em
	&.right
		position				absolute
		bottom				1em
		right				2em