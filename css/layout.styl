::-webkit-scrollbar
	position			absolute
	width				1em
	background-color	#000

::-webkit-scrollbar-track
	transition			all 1.3s ease
	background-color	#efefef
	margin-top			4em
	box-shadow			inset -0.3em 0.2em 0.3em rgba(0, 0, 0, 0.5)

::-webkit-scrollbar-thumb
	background-color	rgb(220,220,220)
	box-shadow			inset 0 -5px 0 #777
	border-radius		4px
	width				0.8em

html 
	display				flex
	width				100%
	min-height			100%
	overflow-x			hidden
	overflow-y			auto

body 
	display				flex
	flex				1
	flex-direction		column
	min-height			100%
	width				100%
	margin				0
	padding				4em 0 0 0
	font-family			Roboto
	font-size			100%
	line-height			1.125em
	z-index				1
	
header 
	transition			all 1s ease-in-out
	display				flex
	flex-direction		row
	flex				2
	justify-content		flex-start
	align-items			center
	position			fixed
	top					0
	left				0
	min-height			4em
	max-height			4em
	min-width			100%
	max-width			100%
	background-color	#000
	color				#fff
	box-shadow			0em 0.2em 0.3em rgba(0, 0, 0, 0.5)
	z-index				100
	&:hover
		box-shadow			0em 0.2em 0.3em rgba(0, 0, 0, 0.3)
		
article
	transition			all 1s ease-in-out
	display				flex
	flex-direction		column
	flex				20
	justify-content		center
	align-items			stretch
	min-height			100%
	background-color	#efefef
	opacity				0
	z-index				10
input
	width					80%
	height					2em
	font-size				1.4em
	line-height				2em
	padding-left			1em
	padding-right			1em
	border-style			none
	border-radius			0.5em
	text-align				center
	background-color		#fefefe
	box-shadow				0 0.1em 0.1em #999
	transition				all 0.5s ease-in-out
	&:hover
		box-shadow				0 0.1em 0.2em #555
	&:focus
		outline					none
	&[placeholder]
		text-overflow			ellipsis
a
	text-decoration		none

.signinButton
	margin	 				auto 0 auto 0
	height 					2em

header
	& .brand 
		transition			all 2s ease-in-out
		width				5em
		margin-left 		1em
		line-height			2.6em

	& .userName
		transition			all 1s ease-in-out
		position			absolute
		right				10em
		top					1em
		opacity				0
	& #userImg
		transition			all 1s ease-in-out
		position			absolute
		z-index				120
		right				0
		top					0
		border-radius		50%
		width				5em
		opacity				0